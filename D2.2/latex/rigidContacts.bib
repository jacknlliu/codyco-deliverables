keywords = {Afferent Pathways,Afferent Pathways: physiology,Arm,Arm: innervation,Feedback,Humans,Models, Neurological,Motor Activity,Movement,Muscle Contraction,Muscles,Muscles: innervation,Organ Specificity,Posture},
