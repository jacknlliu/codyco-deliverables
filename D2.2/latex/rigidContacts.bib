file = {:C$\backslash$:/Users/Jernej Camernik/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Mergner - 2010 - A neurological view on reactive human stance control.pdf:pdf},
isbn = {1367-5788},
issn = {13675788},
journal = {Annual Reviews in Control},
keywords = {Disturbance rejection,Human reactive balancing,Proactive-reactive fusion,Robot simulations,Sensory disturbance estimation,Sensory reweighting,disturbance rejection,human reactive balancing,sensory disturbance estimation},
month = {dec},
number = {2},
pages = {177--198},
title = {{A neurological view on reactive human stance control}},
